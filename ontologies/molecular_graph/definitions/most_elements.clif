(cl-comment 'Valence Class Definitions')

(cl-comment 'Axiom: ME-ax-1')
(cl-comment 'Single Valence')
(forall (x)
	(iff (singlevalence x)
		(and (atom x)
			(forall (b1 b2 a1 a2)
				(if (and (bond b1)(bond b2)(mol a1 b1)(mol x b1)(mol a2 b2)(mol x b2))
					(= b1 b2))))))

(cl-comment 'Axiom: ME-ax-2')
(cl-comment 'Double Valence')
(forall (x)
	(iff (doublevalence x)
		(and (atom x)
			(forall (b1 b2 b3 a1 a2 a3)
				(if
					(and (atom a1)(atom a2)(atom a3)
						(bond b1)(bond b2)(bond b3)
						(mol a1 b1)(mol x b1)
						(mol a2 b2)(mol x b2)
						(mol a3 b3)(mol x b3))
				(or (= b1 b2)(= b1 b3)(= b2 b3)))))))

(cl-comment 'Axiom: ME-ax-3')
(cl-comment 'Triple Valence')
(forall (x)
	(iff (triplevalence x)
		(and (atom x)
			(forall (b1 b2 b3 b4 a1 a2 a3 a4)
				(if
					(and (atom a1)(atom a2)(atom a3)(atom a4)
						(bond b1)(bond b2)(bond b3)(bond b4)
					(mol a1 b1)(mol x b1)
						(mol a2 b2)(mol x b2)
						(mol a3 b3)(mol x b3)
						(mol a4 b4)(mol x b4))
				(or (= b1 b2)(= b1 b3)(= b1 b4)(= b2 b3)(= b2 b4)(= b3 b4)))))))

(cl-comment 'Axiom: ME-ax-4')
(cl-comment 'Quad Valence')
(forall (x)
	(iff (quadvalence x)
		(and (atom x)
			(forall (b1 b2 b3 b4 b5 a1 a2 a3 a4 a5)
				(if (and (atom a1)(atom a2)(atom a3)(atom a4)(atom a5)
						(bond b1)(bond b2)(bond b3)(bond b4)(bond b5)
						(mol a1 b1)(mol x b1)
						(mol a2 b2)(mol x b2)
						(mol a3 b3)(mol x b3)
						(mol a4 b4)(mol x b4)
						(mol a5 b5)(mol x b5))
					(or (= b1 b2)(= b1 b3)(= b1 b4)(= b1 b5)
						(= b2 b3)(= b2 b4)(= b2 b5)
						(= b3 b4)(= b3 b5)
						(= b4 b5)))))))

(cl-comment 'New valence classes for elements.')
(cl-comment 'These axioms indicate that they can have at most a certain number of bonds.')

(cl-comment 'Axiom: ME-ax-5')
(forall (x)
	(if (hydrogen x)
		(singlevalence x)))

(cl-comment 'Axiom: ME-ax-6')
(forall (x)
	(if (oxygen x)
		(doublevalence x)))

(cl-comment 'Axiom: ME-ax-7')
(forall (x)
	(if (nitrogen x)
		(triplevalence x)))

(cl-comment 'Axiom: ME-ax-8')
(forall (x)
	(if (carbon x)
		(quadvalence x)))

(cl-comment 'Axiom: ME-ax-17')
(cl-comment 'A halogen is a fluorine, chlorine, bromine, iodine or astatine atom.')
(forall (x)
	(if (halogen x)
		(or (fluorine x)(chlorine x)(bromine x)(iodine x)(astatine x))))

(cl-comment 'Axiom: ME-ax-18')
(cl-comment 'An X Group is a halogen.')
(forall (x)
	(iff (x_group x)
		(halogen x)))

